<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/featured_movie_imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noposter"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="-70dp"
        android:background="@drawable/featured_bg_fade_design"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/featured_tvshow_title_txt"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="TV Show Title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="75dp"/>

        <TextView
            android:id="@+id/featured_movie_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@id/featured_tvshow_title_txt"
            android:layout_marginTop="8dp"
            android:text="description"
            android:textStyle="normal"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="6dp"
            android:maxLines="3"/>

        <TextView
            android:id="@+id/featured_movie_rating_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/featured_movie_desc_tv"
            android:layout_marginTop="8dp"
            android:text="IMDB Rating"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </RelativeLayout>


</LinearLayout>